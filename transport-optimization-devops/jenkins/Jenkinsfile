pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = 'rimagrouaz/transport-app'
        DOCKER_TAG = "${env.BUILD_NUMBER}"
        DOCKER_REGISTRY = 'docker.io'
        KUBE_NAMESPACE = 'default'
        APP_NAME = 'transport-app'
    }
    
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
        timestamps()
        timeout(time: 30, unit: 'MINUTES')
    }
    
    stages {
        stage('üîç Checkout') {
            steps {
                script {
                    echo "Checking out code from repository..."
                }
                checkout scm
                // Correction : Cr√©ation du dossier .git si n√©cessaire ou stockage ailleurs
                sh 'git rev-parse --short HEAD > commit-id.txt'
            }
        }
        
        stage('üì¶ Install Dependencies') {
            agent {
                docker { 
                    image 'python:3.9-slim'
                    args '-u root'
                }
            }
            steps {
                script {
                    echo "Installing Python dependencies..."
                }
                sh '''
                    cd transport-optimization-devops/app
                    pip install --upgrade pip
                    pip install -r requirements.txt
                '''
            }
        }
        
        stage('üß™ Run Tests') {
            agent {
                docker { 
                    image 'python:3.9-slim'
                    args '-u root'
                }
            }
            steps {
                script {
                    echo "Running unit tests..."
                }
                sh '''
                    pip install pytest pytest-cov Flask requests polyline haversine gunicorn flask-cors openrouteservice
                    cd transport-optimization-devops/tests
                    python -m pytest test_app.py -v --junitxml=test-results.xml --cov=app --cov-report=xml
                '''
            }
            post {
                always {
                    junit 'transport-optimization-devops/tests/test-results.xml'
                }
            }
        }
        
        stage('üîê Security Scan - Code') {
            agent { 
                docker { 
                    image 'python:3.9-slim'
                    args '-u root'
                } 
            }
            steps {
                script {
                    echo "Running security scan on code..."
                }
                sh '''
                    pip install safety
                    cd transport-optimization-devops/app
                    # Utilisation de python -m pour garantir que safety est trouv√© dans le PATH
                    python -m safety check -r requirements.txt || echo "Vulnerabilities found, check report"
                '''
            }
        }
        
        stage('üê≥ Build Docker Image') {
            // Pas d'agent docker ici pour utiliser le Docker de l'h√¥te Jenkins
            steps {
                script {
                    echo "Building Docker image..."
                }
                sh '''
                    cd transport-optimization-devops/docker
                    docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} -t ${DOCKER_IMAGE}:latest -f Dockerfile ../app
                '''
            }
        }
        
        stage('üîí Security Scan - Image') {
            // On utilise l'h√¥te pour lancer Trivy via un conteneur √©ph√©m√®re
            steps {
                script {
                    echo "Scanning Docker image for vulnerabilities..."
                }
                sh "docker run --rm -v /var/run/docker.sock:/var/run/docker.sock aquasec/trivy:latest image --severity HIGH,CRITICAL ${DOCKER_IMAGE}:${DOCKER_TAG}"
            }
        }
        
        stage('üì§ Push to Registry') {
            when { branch 'master' }
            steps {
                script {
                    echo "Pushing Docker image to registry..."
                }
                withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh '''
                        echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin
                        docker push ${DOCKER_IMAGE}:${DOCKER_TAG}
                        docker push ${DOCKER_IMAGE}:latest
                        docker logout
                    '''
                }
            }
        }
        
        stage('üöÄ Deploy to Kubernetes') {
            when { branch 'master' }
            steps {
                script {
                    echo "Deploying to Kubernetes..."
                }
                withKubeConfig([credentialsId: 'kubeconfig-credentials']) {
                    sh '''
                        kubectl set image deployment/${APP_NAME} ${APP_NAME}=${DOCKER_IMAGE}:${DOCKER_TAG} -n ${KUBE_NAMESPACE}
                        kubectl rollout status deployment/${APP_NAME} -n ${KUBE_NAMESPACE} --timeout=5m
                        kubectl get pods -n ${KUBE_NAMESPACE} -l app=${APP_NAME}
                    '''
                }
            }
        }
        
        stage('‚úÖ Smoke Tests') {
            when { branch 'master' }
            steps {
                script {
                    echo "Running smoke tests..."
                }
                sh '''
                    # On tente de r√©cup√©rer l'IP, sinon on utilise le port local d√©fini (NodePort)
                    SERVICE_IP=$(kubectl get svc ${APP_NAME}-service -n ${KUBE_NAMESPACE} -o jsonpath='{.status.loadBalancer.ingress[0].ip}' || echo "")
                    
                    if [ -z "$SERVICE_IP" ]; then
                        echo "LoadBalancer IP not found, using localhost:30080"
                        SERVICE_IP="localhost:30080"
                    fi
                    
                    curl -f http://${SERVICE_IP}/health || echo "Smoke test failed but continuing..."
                '''
            }
        }
    }
    
    post {
        success {
            echo '‚úÖ Pipeline completed successfully!'
        }
        failure {
            echo '‚ùå Pipeline failed!'
        }
        always {
            sh 'docker system prune -f || true'
            cleanWs()
        }
    }
}
