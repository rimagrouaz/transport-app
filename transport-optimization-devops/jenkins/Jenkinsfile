pipeline {
    agent any
    environment {
        DOCKER_USER = 'rimagrouaz' 
        APP_NAME = 'transport-app'
        APP_VERSION = "v${env.BUILD_NUMBER}"
        KUBE_NAMESPACE = 'transport'
        IMAGE_FULL_NAME = "${DOCKER_USER}/${APP_NAME}:${APP_VERSION}"
        // Cache Docker pour acc√©l√©rer les builds
        DOCKER_BUILDKIT = '1'
    }
    
    options {
        // Limite le temps total du pipeline
        timeout(time: 15, unit: 'MINUTES')
        // Garde seulement les 10 derniers builds
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }
    
    stages {
        stage('üîç Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('üê≥ Build & Push to DockerHub') {
            steps {
                script {
                    dir('transport-optimization-devops') {
                        docker.withRegistry('', 'dockerhub-credentials') {
                            // Build avec cache et optimisations
                            def customImage = docker.build(
                                "${IMAGE_FULL_NAME}", 
                                "--cache-from ${DOCKER_USER}/${APP_NAME}:latest --build-arg BUILDKIT_INLINE_CACHE=1 -f docker/Dockerfile ."
                            )
                            // Push en parall√®le de la version et du tag latest
                            parallel(
                                "Push Version": { customImage.push() },
                                "Push Latest": { customImage.push('latest') }
                            )
                        }
                    }
                }
            }
        }
        
        stage('‚ò∏Ô∏è Kubernetes: Deploy') {
            agent {
                docker {
                    image 'bitnami/kubectl:latest'
                    args '-u root --entrypoint='
                    // R√©utilise le m√™me conteneur pour √©conomiser du temps
                    reuseNode true
                }
            }
            steps {
                withCredentials([file(credentialsId: 'kubeconfig', variable: 'KUBECFG')]) {
                    sh '''
                        cp ${KUBECFG} ./kubeconfig_tmp
                        export KUBECONFIG=./kubeconfig_tmp
                        sed -i 's/127.0.0.1/host.docker.internal/g' ./kubeconfig_tmp
                        
                        alias k='kubectl --insecure-skip-tls-verify=true'
                        
                        echo "üöÄ D√©ploiement de l'image : ${IMAGE_FULL_NAME}"
                        
                        # Applique tous les manifests en une seule commande
                        k apply -f transport-optimization-devops/kubernetes/ -n ${KUBE_NAMESPACE}
                        
                        # Force la mise √† jour de l'image
                        k set image deployment/${APP_NAME} ${APP_NAME}=${IMAGE_FULL_NAME} -n ${KUBE_NAMESPACE}
                        
                        # Rollout avec timeout r√©duit et v√©rification rapide
                        echo "‚è≥ V√©rification du d√©ploiement..."
                        k rollout status deployment/${APP_NAME} -n ${KUBE_NAMESPACE} --timeout=2m || {
                            echo "‚ö†Ô∏è  Timeout atteint, v√©rification manuelle..."
                            k get pods -n ${KUBE_NAMESPACE} -l app=${APP_NAME}
                            exit 1
                        }
                        
                        # V√©rification que les pods sont bien Running
                        READY_PODS=$(k get deployment/${APP_NAME} -n ${KUBE_NAMESPACE} -o jsonpath='{.status.readyReplicas}')
                        DESIRED_PODS=$(k get deployment/${APP_NAME} -n ${KUBE_NAMESPACE} -o jsonpath='{.spec.replicas}')
                        
                        if [ "$READY_PODS" = "$DESIRED_PODS" ]; then
                            echo "‚úÖ ${READY_PODS}/${DESIRED_PODS} pods pr√™ts"
                        else
                            echo "‚ùå Seulement ${READY_PODS}/${DESIRED_PODS} pods pr√™ts"
                            exit 1
                        fi
                    '''
                }
            }
        }
    }
    
    post {
        success { 
            echo '‚úÖ D√âPLOIEMENT R√âUSSI SUR LE CLUSTER !'
            echo "üåê Image d√©ploy√©e : ${IMAGE_FULL_NAME}"
        }
        failure { 
            echo '‚ùå √âCHEC : V√©rifie les logs'
            sh "kubectl --insecure-skip-tls-verify=true get pods -n ${KUBE_NAMESPACE} || true"
        }
        always {
            // Nettoyage asynchrone pour ne pas ralentir
            sh "docker rmi ${IMAGE_FULL_NAME} || true"
            cleanWs(deleteDirs: true, patterns: [[pattern: 'kubeconfig_tmp', type: 'INCLUDE']])
        }
    }
}
