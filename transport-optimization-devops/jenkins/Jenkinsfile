pipeline {
    agent any

    environment {
        // --- REMPLACE ICI PAR TON NOM D'UTILISATEUR DOCKERHUB ---
        DOCKER_USER = 'rimagrouaz' 
        APP_NAME = 'transport-app'
        APP_VERSION = "v${env.BUILD_NUMBER}"
        KUBE_NAMESPACE = 'transport'
        IMAGE_FULL_NAME = "${DOCKER_USER}/${APP_NAME}:${APP_VERSION}"
    }

    stages {
        stage('üîç Checkout') {
            steps {
                checkout scm
            }
        }

        stage('üê≥ Build & Push to DockerHub') {
            steps {
                script {
                    dir('transport-optimization-devops') {
                        // Connexion √† DockerHub et Push de l'image
                        docker.withRegistry('', 'dockerhub-credentials') {
                            def customImage = docker.build("${IMAGE_FULL_NAME}", "-f docker/Dockerfile .")
                            customImage.push()
                        }
                    }
                }
            }
        }

        stage('‚ò∏Ô∏è Kubernetes: Deploy') {
            agent {
                docker {
                    image 'bitnami/kubectl:latest'
                    args '-u root --entrypoint='
                }
            }
            steps {
                withCredentials([file(credentialsId: 'kubeconfig', variable: 'KUBECFG')]) {
                    sh '''
                        cp ${KUBECFG} ./kubeconfig_tmp
                        export KUBECONFIG=./kubeconfig_tmp
                        sed -i 's/127.0.0.1/host.docker.internal/g' ./kubeconfig_tmp
                        
                        # Alias pour ignorer le TLS
                        alias k='kubectl --insecure-skip-tls-verify=true'

                        echo "üöÄ D√©ploiement de l'image distante : ${IMAGE_FULL_NAME}"
                        
                        k apply -f transport-optimization-devops/kubernetes/deployment.yaml -n ${KUBE_NAMESPACE}
                        k apply -f transport-optimization-devops/kubernetes/service.yaml -n ${KUBE_NAMESPACE}
                        
                        # On force l'utilisation de l'image DockerHub
                        k set image deployment/${APP_NAME} ${APP_NAME}=${IMAGE_FULL_NAME} -n ${KUBE_NAMESPACE}
                        
                        echo "‚è≥ Attente du d√©marrage..."
                        k rollout status deployment/${APP_NAME} -n ${KUBE_NAMESPACE} --timeout=3m
                    '''
                }
            }
        }
    }

    post {
        success { echo '‚úÖ D√âPLOIEMENT R√âUSSI SUR LE CLUSTER !' }
        failure { echo '‚ùå √âCHEC : V√©rifie les logs DockerHub ou Kubernetes' }
        always {
            sh "docker rmi ${IMAGE_FULL_NAME} || true"
        }
    }
}
