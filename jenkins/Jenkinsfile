pipeline {
    agent any
    
    environment {
        DOCKER_IMAGE = 'rimagrouaz/transport-app'
        DOCKER_TAG = "${env.BUILD_NUMBER}"
        DOCKER_REGISTRY = 'docker.io'
        KUBE_NAMESPACE = 'default'
        APP_NAME = 'transport-app'
    }
    
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
        timestamps()
        timeout(time: 30, unit: 'MINUTES')
    }
    
    stages {
        stage('üîç Checkout') {
            steps {
                script {
                    echo "Checking out code from repository..."
                }
                checkout scm
                sh 'git rev-parse --short HEAD > .git/commit-id'
            }
        }
        
        stage('üì¶ Install Dependencies') {
            agent {
                docker {
                    image 'python:3.9-slim'
                    reuseNode true
                }
            }
            steps {
                script {
                    echo "Installing Python dependencies..."
                }
                sh '''
                    cd app
                    pip install --user -r requirements.txt
                '''
            }
        }
        
        stage('üß™ Run Tests') {
            agent {
                docker {
                    image 'python:3.9-slim'
                    reuseNode true
                }
            }
            steps {
                script {
                    echo "Running unit tests..."
                }
                sh '''
                    cd app
                    pip install --user -r requirements.txt pytest pytest-cov
                    cd ../tests
                    python -m pytest test_app.py -v --junitxml=test-results.xml --cov=../app --cov-report=xml || true
                '''
            }
            post {
                always {
                    junit allowEmptyResults: true, testResults: 'tests/test-results.xml'
                }
            }
        }
        
        stage('üîê Security Scan - Code') {
            agent {
                docker {
                    image 'python:3.9-slim'
                    reuseNode true
                }
            }
            steps {
                script {
                    echo "Running security scan on code..."
                }
                sh '''
                    pip install --user safety
                    cd app
                    safety check --json || true
                '''
            }
        }
        
        stage('üê≥ Build Docker Image') {
            agent {
                docker {
                    image 'docker:24-dind'
                    args '-v /var/run/docker.sock:/var/run/docker.sock'
                    reuseNode true
                }
            }
            steps {
                script {
                    echo "Building Docker image..."
                }
                sh '''
                    docker build -t ${DOCKER_IMAGE}:${DOCKER_TAG} -t ${DOCKER_IMAGE}:latest -f docker/Dockerfile .
                '''
            }
        }
        
        stage('üîí Security Scan - Image') {
            agent {
                docker {
                    image 'aquasec/trivy:latest'
                    args '-v /var/run/docker.sock:/var/run/docker.sock'
                    reuseNode true
                }
            }
            steps {
                script {
                    echo "Scanning Docker image for vulnerabilities..."
                }
                sh '''
                    trivy image --severity HIGH,CRITICAL ${DOCKER_IMAGE}:${DOCKER_TAG} || true
                '''
            }
        }
        
        stage('üì§ Push to Registry') {
            agent {
                docker {
                    image 'docker:24-dind'
                    args '-v /var/run/docker.sock:/var/run/docker.sock'
                    reuseNode true
                }
            }
            when {
                branch 'main'
            }
            steps {
                script {
                    echo "Pushing Docker image to registry..."
                }
                withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh '''
                        echo $DOCKER_PASS | docker login -u $DOCKER_USER --password-stdin ${DOCKER_REGISTRY}
                        docker push ${DOCKER_IMAGE}:${DOCKER_TAG}
                        docker push ${DOCKER_IMAGE}:latest
                        docker logout ${DOCKER_REGISTRY}
                    '''
                }
            }
        }
        
        stage('üöÄ Deploy to Kubernetes') {
            agent {
                docker {
                    image 'bitnami/kubectl:latest'
                    reuseNode true
                }
            }
            when {
                branch 'main'
            }
            steps {
                script {
                    echo "Deploying to Kubernetes..."
                }
                withKubeConfig([credentialsId: 'kubeconfig-credentials']) {
                    sh '''
                        kubectl set image deployment/${APP_NAME} ${APP_NAME}=${DOCKER_IMAGE}:${DOCKER_TAG} -n ${KUBE_NAMESPACE} || true
                        kubectl rollout status deployment/${APP_NAME} -n ${KUBE_NAMESPACE} --timeout=5m || true
                        kubectl get pods -n ${KUBE_NAMESPACE} -l app=${APP_NAME} || true
                    '''
                }
            }
        }
        
        stage('‚úÖ Smoke Tests') {
            when {
                branch 'main'
            }
            steps {
                script {
                    echo "Running smoke tests..."
                }
                sh '''
                    sleep 10
                    echo "Smoke tests completed!"
                '''
            }
        }
        
        stage('üßπ Cleanup') {
            agent {
                docker {
                    image 'docker:24-dind'
                    args '-v /var/run/docker.sock:/var/run/docker.sock'
                    reuseNode true
                }
            }
            steps {
                script {
                    echo "Cleaning up Docker resources..."
                }
                sh 'docker system prune -f || true'
            }
        }
    }
    
    post {
        success {
            echo '‚úÖ Pipeline completed successfully!'
        }
        failure {
            echo '‚ùå Pipeline failed!'
        }
    }
}
