pipeline {
    agent none
    
    options {
        timestamps()
        timeout(time: 30, unit: 'MINUTES')
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }
    
    environment {
        DOCKER_IMAGE = 'rimagrouaz/transport-optimization'
        DOCKER_REGISTRY = 'docker.io'
        K8S_NAMESPACE = 'production'
    }
    
    stages {
        stage('üîç Checkout') {
            agent any
            steps {
                script {
                    echo "Checking out code from repository..."
                }
                checkout scm
                script {
                    env.GIT_COMMIT_SHORT = sh(
                        script: "git rev-parse --short HEAD",
                        returnStdout: true
                    ).trim()
                    env.BUILD_TAG = "${env.GIT_COMMIT_SHORT}-${env.BUILD_NUMBER}"
                }
            }
        }
        
        stage('üì¶ Install Dependencies') {
            agent {
                docker {
                    image 'python:3.9-slim'
                    args '-v $HOME/.cache/pip:/root/.cache/pip'
                    reuseNode true
                }
            }
            steps {
                script {
                    echo "Installing Python dependencies..."
                }
                sh '''
                    cd app
                    pip install --user -r requirements.txt
                '''
            }
        }
        
        stage('üß™ Run Tests') {
            agent {
                docker {
                    image 'python:3.9-slim'
                    args '-v $HOME/.cache/pip:/root/.cache/pip'
                    reuseNode true
                }
            }
            steps {
                script {
                    echo "Running tests..."
                }
                sh '''
                    cd app
                    pip install --user -r requirements.txt
                    python -m pytest ../tests/ --verbose --junit-xml=test-results.xml || true
                '''
            }
            post {
                always {
                    junit allowEmptyResults: true, testResults: 'app/test-results.xml'
                }
            }
        }
        
        stage('üîê Security Scan - Code') {
            agent {
                docker {
                    image 'python:3.9-slim'
                    reuseNode true
                }
            }
            steps {
                script {
                    echo "Running security scan on code..."
                }
                sh '''
                    pip install --user bandit safety
                    bandit -r app/ -f json -o bandit-report.json || true
                    safety check --json > safety-report.json || true
                '''
            }
        }
        
        stage('üê≥ Build Docker Image') {
            agent {
                docker {
                    image 'docker:24-dind'
                    args '-v /var/run/docker.sock:/var/run/docker.sock'
                    reuseNode true
                }
            }
            steps {
                script {
                    echo "Building Docker image..."
                }
                sh '''
                    docker build -t ${DOCKER_IMAGE}:${BUILD_TAG} -f docker/Dockerfile .
                    docker tag ${DOCKER_IMAGE}:${BUILD_TAG} ${DOCKER_IMAGE}:latest
                '''
            }
        }
        
        stage('üîí Security Scan - Image') {
            agent {
                docker {
                    image 'aquasec/trivy:latest'
                    args '-v /var/run/docker.sock:/var/run/docker.sock'
                    reuseNode true
                }
            }
            steps {
                script {
                    echo "Scanning Docker image for vulnerabilities..."
                }
                sh '''
                    trivy image --severity HIGH,CRITICAL ${DOCKER_IMAGE}:${BUILD_TAG} || true
                '''
            }
        }
        
        stage('üì§ Push to Registry') {
            agent {
                docker {
                    image 'docker:24-dind'
                    args '-v /var/run/docker.sock:/var/run/docker.sock'
                    reuseNode true
                }
            }
            when {
                branch 'main'
            }
            steps {
                script {
                    echo "Pushing image to Docker registry..."
                }
                withCredentials([usernamePassword(
                    credentialsId: 'dockerhub-credentials',
                    usernameVariable: 'DOCKER_USER',
                    passwordVariable: 'DOCKER_PASS'
                )]) {
                    sh '''
                        echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                        docker push ${DOCKER_IMAGE}:${BUILD_TAG}
                        docker push ${DOCKER_IMAGE}:latest
                    '''
                }
            }
        }
        
        stage('üöÄ Deploy to Kubernetes') {
            agent {
                docker {
                    image 'bitnami/kubectl:latest'
                    reuseNode true
                }
            }
            when {
                branch 'main'
            }
            steps {
                script {
                    echo "Deploying to Kubernetes..."
                }
                sh '''
                    kubectl set image deployment/transport-app \
                        transport-app=${DOCKER_IMAGE}:${BUILD_TAG} \
                        -n ${K8S_NAMESPACE} || true
                    kubectl rollout status deployment/transport-app \
                        -n ${K8S_NAMESPACE} --timeout=5m || true
                '''
            }
        }
        
        stage('‚úÖ Smoke Tests') {
            agent any
            when {
                branch 'main'
            }
            steps {
                script {
                    echo "Running smoke tests..."
                }
                sh '''
                    sleep 10
                    curl -f http://transport-app.${K8S_NAMESPACE}.svc.cluster.local/ || true
                '''
            }
        }
        
        stage('üßπ Cleanup') {
            agent {
                docker {
                    image 'docker:24-dind'
                    args '-v /var/run/docker.sock:/var/run/docker.sock'
                    reuseNode true
                }
            }
            steps {
                script {
                    echo "Cleaning up Docker resources..."
                }
                sh 'docker system prune -f || true'
            }
        }
    }
    
    post {
        always {
            script {
                echo "Pipeline execution completed."
            }
        }
        success {
            script {
                echo "‚úÖ Pipeline completed successfully!"
            }
        }
        failure {
            script {
                echo "‚ùå Pipeline failed!"
            }
        }
    }
}
